<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_toast_lay"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_round_corner_radius_8_dp_gray_stroke"
    android:paddingHorizontal="@dimen/_8sdp"
    android:paddingVertical="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_inter_bold"
            android:text="02 SEPT, 2022 . 08:00 AM"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

    <View
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/view_bg_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_local_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="192.168.0.218"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Local IP"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/input_Text_color"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_11sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_wifi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hagora Techno Treats"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Wi-Fi Name"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/input_Text_color"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_11sdp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>