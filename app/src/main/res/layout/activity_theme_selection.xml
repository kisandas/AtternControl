<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ThemeSelectionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toEndOf="@id/iv_back"
            android:fontFamily="@font/font_inter_bold"
            android:gravity="center"
            android:text="Style"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_20sdp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_system_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/font_inter_regular"
            android:text="System Mode"
            android:textColor="@color/input_Text_color"
            android:textSize="@dimen/_12sdp"
            app:drawableLeftCompat="@drawable/ic_leave" />

        <RadioButton
            android:id="@+id/rb_system_mode"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/custom_radiobutton_selector"
            android:button="@null"
            android:checked="false"
            android:fontFamily="@font/font_inter_bold"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:background="@color/view_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_dark_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/font_inter_regular"
            android:text="Dark Mode"
            android:textColor="@color/input_Text_color"
            android:textSize="@dimen/_12sdp"
            app:drawableLeftCompat="@drawable/ic_leave" />

        <RadioButton
            android:id="@+id/rb_dark_mode"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/custom_radiobutton_selector"
            android:button="@null"
            android:checked="false"
            android:fontFamily="@font/font_inter_bold"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:background="@color/view_bg_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_light_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/font_inter_regular"
            android:text="Light Mode"
            android:textColor="@color/input_Text_color"
            android:textSize="@dimen/_12sdp"
            app:drawableLeftCompat="@drawable/ic_leave" />

        <RadioButton
            android:id="@+id/rb_light_mode"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/custom_radiobutton_selector"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/font_inter_bold"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:background="@color/view_bg_color" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rc_colorList"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>


</LinearLayout>