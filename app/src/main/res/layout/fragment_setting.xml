<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.manual_add.ManualAddFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter_bold"
            android:gravity="start"
            android:text="Settings"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_20sdp"
            app:drawableEndCompat="@drawable/ic_file" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:background="@drawable/bg_text_setting">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Details"
            android:fontFamily="@font/font_inter_semi_bold"
            android:textSize="@dimen/_12sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            app:drawableEndCompat="@drawable/ic_expands" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Local IP:"
                    android:fontFamily="@font/font_inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Local IP:"
                    android:fontFamily="@font/font_inter_semi_bold"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subnet Mask:"
                    android:fontFamily="@font/font_inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Local IP:"
                    android:fontFamily="@font/font_inter_semi_bold"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gateway IP:"
                    android:fontFamily="@font/font_inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Local IP:"
                    android:fontFamily="@font/font_inter_semi_bold"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Public IP:"
                    android:fontFamily="@font/font_inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Local IP:"
                    android:fontFamily="@font/font_inter_semi_bold"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MAC Address:"
                    android:fontFamily="@font/font_inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Local IP:"
                    android:fontFamily="@font/font_inter_semi_bold"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:background="@drawable/bg_text_setting">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Options"
            android:fontFamily="@font/font_inter_semi_bold"
            android:textSize="@dimen/_12sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            app:drawableEndCompat="@drawable/ic_expands" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Night shift"
                    android:fontFamily="@font/font_inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <ToggleButton
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/font_inter_semi_bold"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:textOff=""
                    android:checked="false"
                    android:textOn=""
                    android:button="@drawable/custom_toggle_selector"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salary"
                    android:fontFamily="@font/font_inter_regular"
                    android:textSize="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <ToggleButton
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/font_inter_semi_bold"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:textOff=""
                    android:checked="true"
                    android:textOn=""
                    android:button="@drawable/custom_toggle_selector"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:background="@drawable/bg_text_setting">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi"
            android:fontFamily="@font/font_inter_semi_bold"
            android:textSize="@dimen/_12sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            app:drawableEndCompat="@drawable/ic_expands" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_regular"
                android:text="SSID"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/_11sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_regular"
                android:hint="SSID"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_14sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@color/view_bg_color" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_regular"
                android:text="Password"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/_11sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_regular"
                android:hint="SSID"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_14sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@color/view_bg_color" />

            <TextView
                android:id="@+id/btn_update_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_round_corner_radius_8_dp"
                android:backgroundTint="@color/main_Theme_green_color"
                android:fontFamily="@font/font_inter_semi_bold"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>


</ScrollView>