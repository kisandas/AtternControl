<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_toast_lay"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_round_corner_radius_8_dp_success_toast"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_inter_bold"
            android:text="cooper levin"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/iv_leave"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@+id/iv_menu"
            android:src="@drawable/ic_leave" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_dots_three" />
    </RelativeLayout>

    <View
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/red_stroke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_in_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="05:56 AM"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="In - Time"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/input_Text_color"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_11sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_out_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Out - Time"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/input_Text_color"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_11sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_total_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total Hours"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/input_Text_color"
                android:fontFamily="@font/font_inter_bold"
                android:textSize="@dimen/_11sdp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>